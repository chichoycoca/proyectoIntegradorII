<%- include('./partials/head') %>
<% if (cookies.usuarioLogueado !== undefined || locals.userSession !== undefined) { %>
	<%- include('./partials/headerLogueado') %>
<% } else { %>
	<%- include('./partials/header') %>
<% } %>


<div class="container products-wrapper">
	<div class="row">
	  <% if (productos.length > 0) { %><div class="col-12">
		<h2 class="products-title">Resultados de b√∫squeda para: "<%= query %>"</h2>
	</div>
		 
		<% for (let i = 0; i < productos.length; i++) { %>
			<div>
				<section>
					<a href="/producto">
						<figure class="product-box_image">
							<img src="<%= productos[i].imagen_producto %>">
						</figure>
						<article class="product-box_data">
							<h2><%= productos[i].producto %></h2>
							<p><%= productos[i].descripcion %></p>
						</article>
					</a>
				</section>
			</div>
			<% } %>
			<% } else { %>
			  <div class="col-12">
				<h2 class="products-title">No se encontraron productos que coincidan con el termino: "<%= query %>".</h2>
			  </div>
			<% } %>

<%- include('./partials/footer') %>

