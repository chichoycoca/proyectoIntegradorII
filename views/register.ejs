<%- include('./partials/head') %>
<%- include('./partials/header') %>

	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
				<% if (locals.errors){
					errors.forEach(error => {	%>
						<p> <%= error.msg %> </p> 
					<%}) %>
					 
				<%	} %>
			</div>
			<!-- Show the "ultimos" products -->
			
